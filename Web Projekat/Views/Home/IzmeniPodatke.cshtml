<h1>Izmenite svoje podatke:</h1>

<form action="~/Home/IzmeniPodatke" method="post">
    <table class="table">
        <tr>
            <td>Korisnicko Ime:</td>
            <td><input type="text" name="korisnickoIme" value=@ViewBag.Promena.KorisnickoIme></td>
        </tr>
        <tr>
            <td>Lozinka:</td>
            <td><input type="text" name="lozinka" value=@ViewBag.Promena.Lozinka></td>
        </tr>
        <tr>
            <td>Ime:</td>
            <td><input type="text" name="ime" value=@ViewBag.Promena.Ime></td>
        </tr>
        <tr>
            <td>Prezime:</td>
            <td><input type="text" name="prezime" value=@ViewBag.Promena.Prezime></td>
        </tr>
        <tr>
            <td>Pol:</td>
            <td>
                <select name="pol">
                    <option value="MUSKI">MUSKI</option>
                    <option value="ZENSKI">ZENSKI</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>Datum Rodjenja:</td>
            <td><input type="text" name="datumRodnjenja" value=@ViewBag.Promena.DatumRodjenja></td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="text" name="idkorisnika" value=@ViewBag.Promena.IDKorisnika hidden />
                <input type="submit" value="Promeni" />
            </td>
        </tr>
    </table>
</form>